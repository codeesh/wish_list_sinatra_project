<h3>Here Is your <%= @wishlist.name%> Wishlist!</h3><br>


<table class="table">
  <tr>
    <th>Item</th>
    <th>Quantity</th> 
    <th>Price</th>
  </tr>
    <% @items.each do |item|%>
      <tr>
        <td><%=item.name%></td>
        <td><%=item.quantity%></td>
        <td><%=item.price%></td>
      </tr>
   
  <%end%> 
 </table>



<br><hr><br>

<form action="/item/new" method="POST">
<input type="hidden" name="wishlist_id" value= <%=@wishlist.id%> >
 Add Item To Wishlist: <input type="text" name="item" placeholder="Item">
 <input type="number" name="quantity" placeholder="Quantity">
 <input type="text" name="price" placeholder="Price">
 <input type="submit" name="Add Item To List " class="btn btn-primary">
</form>

<p>
<form method="POST" action="/wishlist/<%=@wishlist.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete This Wishlist"  class="btn btn-danger">
</form>
</p>
